---
import Invitation from './Invitaiton.astro'
import invitees from '../data/invitees.json'

export function getStaticPaths() {
  return invitees.map(invitee => {
      return { params: {invitee: invitee.slug}, props: {name: invitee.name }}
  })
}

const { invitee } = Astro.params
const { name } = Astro.props

export const prerender = true;
---

<Invitation slug={invitee} name={name} />
